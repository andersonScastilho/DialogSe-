generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @unique
  firstName     String
  lastName      String
  email         String   @unique
  password_hash String
  createdAt     DateTime
  updatedAt     DateTime @updatedAt

  @@map("users")
}

model Message {
  id       String   @unique
  sender   String
  receiver String
  content  String
  sentAt   DateTime

  conversation   Conversation @relation(fields: [conversationId], references: [id])
  conversationId String

  @@map("messages")
}

model Conversation {
  id             String @unique
  participant1Id String
  participant2Id String

  messagesId Message[]

  @@unique([participant1Id, participant2Id])
  @@unique([participant2Id, participant1Id])
}
